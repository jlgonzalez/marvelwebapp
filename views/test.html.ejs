<!DOCTYPE html>
<html ng-app='app'>
  <head>
    <link rel='stylesheet' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div ng-controller='PostsCtrl' class='container'>
      <h1>Daily</h1>
      <div class="panel-group">
        <div class="panel panel-primary">
          <div class="panel-heading">{{ hero.name}}</div>
          <div class="panel-body">{{ hero.description}}</div>
        </div>
      </div>
       <form role='form'>
        <div class='form-group'>
          <div class="input-group">
            <span class='input-group-btn'>
              <button ng-click='newMarvelHero()' class='btn btn-default'>New one</button>
            </span>
          </div>
        </div>
      </form>
    </div>
    <script src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular.js'></script>
    <script src='/app.js'></script>
  </body>
</html>